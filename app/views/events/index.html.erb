<div class="container-fluid text-center">
  <h1>Mis Eventos</h1>

  <table class="table table-dark">
    
    <thead>
      <tr>
        <th>Category</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% if user_signed_in? %>

      <%current_user.reservations.includes([:event]).each do |reservation|%>
      <tr>
        <td><%= reservation.event.category %></td>
        <td><%= reservation.event.date %></td>
        <td><%= link_to 'Ver Fotos', event_path(reservation.event), class: 'btn btn-danger text-white' %></td>
      </tr>

      <% end %>

      <% end %>

      <% if photographer_signed_in? %>
      
      <%current_photographer.reservations.includes([:event]).each do |reservation|%>
      <tr>
        <td><%= reservation.event.category %></td>
        <td><%= reservation.event.date %></td>
        <td><%= link_to 'Ver Fotos', event_path(reservation.event), class: 'btn btn-danger text-white' %></td>
      </tr>

      <% end %>

      <% end %>
    </tbody>

  </table>

  <% if user_signed_in? %>
      <%= link_to 'Back', users_index_path %>
  <% end %>

  <% if photographer_signed_in? %>
      <%= link_to 'Back', photographers_show_path %>
  <% end %>

  
</div>
